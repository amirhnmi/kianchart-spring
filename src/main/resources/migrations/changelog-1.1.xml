        </createTable>
    </changeSet>
    <changeSet id="1745735532144-7" author="fanagin">
        <addUniqueConstraint columnNames="slug" constraintName="uc_permissions_slug" tableName="permissions"/>
    </changeSet>
    <changeSet id="1745735532144-8" author="fanagin">
        <addUniqueConstraint columnNames="slug" constraintName="uc_roles_slug" tableName="roles"/>
    </changeSet>
    <changeSet id="1745735532144-9" author="fanagin">
        <addUniqueConstraint columnNames="email" constraintName="uc_users_email" tableName="users"/>
    </changeSet>
    <changeSet id="1745735532144-10" author="fanagin">
        <addForeignKeyConstraint baseColumnNames="creator_id" baseTableName="files" constraintName="FK_FILES_ON_CREATOR"
                                 referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>
    <changeSet id="1745735532144-11" author="fanagin">
        <addForeignKeyConstraint baseColumnNames="permission_id" baseTableName="role_permissions"
                                 constraintName="FK_ROLE_PERMISSIONS_ON_PERMISSION" referencedColumnNames="id"
                                 referencedTableName="permissions"/>
    </changeSet>
    <changeSet id="1745735532144-12" author="fanagin">
        <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="role_permissions"
                                 constraintName="FK_ROLE_PERMISSIONS_ON_ROLE" referencedColumnNames="id"
                                 referencedTableName="roles"/>
    </changeSet>
    <changeSet id="1745735532144-13" author="fanagin">
        <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="user_role"
                                 constraintName="FK_USER_ROLE_ON_ROLE" referencedColumnNames="id"
                                 referencedTableName="roles"/>
    </changeSet>
    <changeSet id="1745735532144-14" author="fanagin">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_role"
                                 constraintName="FK_USER_ROLE_ON_USER" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>